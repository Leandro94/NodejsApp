			label Matricula:
			input(type="text", name="matricula", class="form-control")
		div(class="form-group")
			label Curso:
			input(type="text", name="curso", class="form-control")
		div(class="form-group")
			label Turno:
			input(type="text", name="turno", class="form-control")
		div(class="form-group")
